{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "function-paren-newline": [
            "error",
            "consistent"
        ],
        "implicit-arrow-linebreak": [
            "error",
            "below"
        ],
        "linebreak-style": 0,
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "operator-linebreak": [
            "error",
            "after"
        ],
        "quotes": [
            "error",
            "double"
        ]
    }
}